.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.music-image{
  width:102rpx;
  height:110rpx;
  position:absolute;
  left:50%;
  margin-left:-50rpx;
  top:180rpx;
  opacity: 0.6;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: cornflowerblue;
}

.text {
  font-size: 24rpx;
  color: cornflowerblue;
  margin-left: 20rpx;
}

.datetime {
  font-size: 24rpx;
  color: cornflowerblue;
  margin-left: 30rpx;
  vertical-align: middle;
}

.title {
  font-family: Verdana, sans-serif;
  font-size: 30rpx;
  margin: 20rpx 0rpx 30rpx 10rpx;
  font-weight: 600;
  color: cornflowerblue;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
   float:right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width:50rpx;
  height:50rpx;
}
 .share-img{
  margin-left: 30rpx;
  
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  color: darksalmon;

}
