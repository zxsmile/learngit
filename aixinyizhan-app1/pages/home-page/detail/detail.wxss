.container {
  display: flex;
  flex-direction: column;
}
.HeadDate{
  display:flex;
  flex-direction: row;
  margin: 10rpx 0 20rpx 10rpx; 
}
.head-image {
  width: 100%;
  height: 460rpx;
}
.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  margin-top: 12rpx;

  font-size: 26rpx;
}
.title{
  font-size:30rpx;
  margin:20rpx 0rpx 30rpx 10rpx;
  font-weight: 600;
}
.tool {
  margin-top: 20rpx;
}

.circle-img {
   float:right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width:50rpx;
  height:50rpx;
}
 .share-img{
  margin-left: 30rpx;
  
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  font-size:24rpx;
}
