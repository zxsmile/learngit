<view class="container">
<image src="{{HomePageDetail_key.Image}}" class="head-image"></image>
<view class="HeadDate">
<image src="{{HomePageDetail_key.HeadImage}}" class="avatar"></image>
<text class="date">{{HomePageDetail_key.date}}</text>
</view>
<text class="title">{{HomePageDetail_key.title}}</text>
<view class="tool">
    <view class="circle-img">
      <image wx:if="{{collected}}" catchtap="onColletionTap" src="/images/collection.png" class="circle-image"></image>
      <image wx:else catchtap="onColletionTap"  src="/images/collection-anti.png"  class="circle-image"></image>
      <image catchtap="onShareTap" src="/images/send.jpg" class="share-img"></image>
    </view>
    <view class="horizon"></view>
  </view>
<text class="detail">{{HomePageDetail_key.detail}}</text>
</view>