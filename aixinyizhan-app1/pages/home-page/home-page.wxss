swiper{
  width:100%;
  height:600rpx
}
swiper image{
  width:100%;
  height:600rpx
}
.continer{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  background-color:#fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.HeadDate{
  display:flex;
  flex-direction: row;
  margin: 10rpx 0 20rpx 10rpx; 
}
.HeadImage{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  margin-top: 12rpx;

  font-size: 26rpx;
}
.title{
  font-size:30rpx;
  margin:20rpx 0rpx 30rpx 10rpx;
  font-weight: 600;
}
.image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.content{
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}